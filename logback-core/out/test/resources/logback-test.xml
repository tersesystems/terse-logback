<configuration debug="true">

    <newRule pattern="*/censor"
             actionClass="com.tersesystems.logback.censor.CensorAction"/>

    <!--<censor class="com.tersesystems.logback.censor.RegexCensor">-->
        <!--<replacementText>[CENSORED]</replacementText>-->
        <!--<regex>herpderp</regex>-->
    <!--</censor>-->

    <conversionRule conversionWord="censoredMessage" converterClass="com.tersesystems.logback.censor.CensoringMessageConverter"/>

    <appender name="TEST" class="com.tersesystems.logback.TestAppender">
        <encoder>
            <pattern>%censoredMessage</pattern>
        </encoder>
    </appender>

    <root>
        <appender-ref ref="TEST"/>
    </root>
</configuration>